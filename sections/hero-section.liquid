{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-section-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}vh;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.text_alignment }};
    overflow: hidden;
    background-color: {{ section.settings.bg_color }};
  }

  .hero-background-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-background-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .hero-overlay-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .hero-content-{{ section.id }} {
    position: relative;
    z-index: 3;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: {{ section.settings.text_alignment }};
    color: {{ section.settings.text_color }};
  }

  .hero-heading-{{ section.id }} {
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: {{ section.settings.text_color }};
    font-weight: bold;
  }

  .hero-subheading-{{ section.id }} {
    font-size: {{ section.settings.subheading_size }}px;
    line-height: 1.5;
    margin-bottom: 2rem;
    color: {{ section.settings.text_color }};
    max-width: 800px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% elsif section.settings.text_alignment == 'right' %}
       margin-left: auto;
    {% endif %}
  }

  .hero-btn-{{ section.id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    border-radius: 4px;
    transition: all 0.3s ease;
    border: 2px solid {{ section.settings.button_bg_color }};
  }

  .hero-btn-{{ section.id }}:hover {
    background-color: transparent;
    color: {{ section.settings.button_bg_color }};
  }

  @media screen and (max-width: 768px) {
    .hero-heading-{{ section.id }} {
      font-size: {{ section.settings.heading_size | times: 0.7 | round }}px;
    }
    .hero-subheading-{{ section.id }} {
      font-size: {{ section.settings.subheading_size | times: 0.9 | round }}px;
    }
    .hero-section-{{ section.id }} {
        height: auto;
        min-height: {{ section.settings.section_height | times: 0.8 }}vh;
        padding-top: 4rem;
        padding-bottom: 4rem;
    }
  }
{%- endstyle -%}

<div class="hero-section-{{ section.id }} section-{{ section.id }}-padding">
  
  {%- if section.settings.image != blank -%}
    <div class="hero-background-{{ section.id }}">
      {{ section.settings.image | image_url: width: 3840 | image_tag:
        loading: 'eager',
        width: section.settings.image.width,
        height: section.settings.image.height,
        class: 'hero-image',
        sizes: '100vw',
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      }}
    </div>
  {%- endif -%}

  <div class="hero-overlay-{{ section.id }}"></div>

  <div class="hero-content-{{ section.id }}">
    {%- if section.settings.heading != blank -%}
      <h2 class="hero-heading-{{ section.id }}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <div class="hero-subheading-{{ section.id }}">
        {{ section.settings.subheading }}
      </div>
    {%- endif -%}

    {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="hero-btn-{{ section.id }}">
        {{ section.settings.button_text }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Custom Hero Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Section Height",
      "default": 80
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our Store"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 60
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover our amazing products and offers.</p>"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Subheading Font Size",
      "default": 18
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background",
      "default": "#f4f4f4"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Section"
    }
  ]
}
{% endschema %}